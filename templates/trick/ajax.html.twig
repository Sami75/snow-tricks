{% for trick in tricks %}
        <div class="col-xl-2 col-lg-3 col-md-4">    
         <div class="card">
          {% if trick.attachements is empty %}
            <img src="{{ asset('img/non-disponible.jpg') }}" class="card-img-top img-fluid" alt="...">
            {% else %}
            <img src="{{ asset('uploads/images/' ~ trick.attachements[0]) }}" class="card-img-top img-fluid" alt="...">
          {% endif%}
            <div class="card-body">
              <a class="card-title" href="{{path('trick_show', {id : trick.id })}}">{{ trick.name }} </a>
              <a href="{{path('trick_edit',{id: trick.id })}}">
              <i class="fas fa-pencil-alt"></i>
              </a>
              <form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
              <input type="hidden" name="_method" value="DELETE">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
              <button><i class="far fa-trash-alt"></i></button>
              </form>
              
              </a>              
            </div>
          </div>  
        </div>
     {% endfor %}