

{% for trick in tricks %}
        <div class="col-xl-2 col-lg-3 col-md-4">    
         <div class="card">
           <img src="{{ asset('uploads/images/' ~ trick.cover ) }}" class="card-img-top img-fluid" alt="...">
            <div class="card-body">
              <a class="card-title" href="{{path('trick_show', {id : trick.id })}}">{{ trick.name }} </a>
              <a href="{{path('trick_edit',{id: trick.id })}}">
              <i class="fas fa-pencil-alt"></i>
              </a>
              <a href="{{path('trick_delete',{id: trick.id })}}">
              <i class="far fa-trash-alt"></i>
              </a>              
            </div>
          </div>  
        </div>
     {% endfor %}